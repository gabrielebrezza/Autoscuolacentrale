<!-- admin-guides.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/adminHeader.css">
    <title><%= title %></title>
</head>
<body>
    <%- include('header.ejs') %>

    <h1><%= title %></h1>
    <div>
        <% if (guides.length > 0) { %>
            <ul>
                <% guides.forEach((guide) => { %>
                    <li><%= guide.title %> - <%= guide.instructor %></li> <!-- Aggiungi altri campi guida se necessario -->
                <% }); %>
            </ul>
        <% } else { %>
            <p>Nessuna guida disponibile al momento.</p>
        <% } %>
    </div>

    <!-- Altri contenuti della pagina admin-guides -->

</body>
</html>
