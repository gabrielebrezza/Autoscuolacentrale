<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/addGuides.css">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-multidatespicker/1.6.6/jquery-ui.multidatespicker.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-multidatespicker/1.6.6/jquery-ui.multidatespicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>
<body>
    <%- include('header.ejs') %>
    <% const optionize = (values) => {
        const options = [];
        for (const v of values) {
            options.push({
                value: v._id,
                label: `${v.nome} ${v.cognome}`
            });
        }
        return options.sort((a, b) => a.label.localeCompare(b.label));
    } %>

    <main class="main-content">
        <div class="form-container">
            <h2 class="form-title">Crea una Nuova Guida</h2>
            <form action="/admin/createLesson" method="POST" class="guide-form">
                <% if (role == 'Super') { %>
                    <div class="form-group">
                        <label for="instructor" class="form-label">Istruttore:</label>
                        <select id="instructor" name="instructor" class="form-select">
                            <% for (const i of optionize(instructors)) { %>
                                <option value="<%= i.value %>"><%= i.label.toLowerCase() %></option>
                            <% } %>
                        </select>
                    </div>
                <% } %>
                
                <div class="form-group">
                    <label for="day" class="form-label">Giorni:</label>
                    <input type="text" id="day" name="day" class="form-input" readonly required>
                </div>
                
                <div class="form-group">
                    <label for="startHour" class="form-label">Ora di inizio:</label>
                    <input type="time" id="startHour" name="startHour" class="form-input" required>
                </div>
                
                <div class="form-group">
                    <label for="locationLink" class="form-label">Luogo di partenza:</label>
                    <input type="text" id="locationLink" name="locationLink" class="form-input" placeholder="Link di google maps">
                </div>
                
                <div class="form-group">
                    <label for="reserved" class="form-label">Riservato a:</label>
                    <select name="reserved" id="reserved" class="form-select form-select-multiple" multiple>
                        <% for (const i of optionize(students)) { %>
                            <option value="<%= i.value %>"><%= i.label %></option>
                        <% } %>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="lessonsNumber" class="form-label">Numero di guide:</label>
                    <input type="number" id="lessonsNumber" name="lessonsNumber" class="form-input" min="1" required>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Durata:</label>
                    <div class="duration-options">
                        <div class="duration-option">
                            <input type="radio" id="30min" name="duration" value="30" checked class="duration-radio">
                            <label for="30min" class="duration-label">30 minuti</label>
                        </div>
                        <div class="duration-option">
                            <input type="radio" id="40min" name="duration" value="40" class="duration-radio">
                            <label for="40min" class="duration-label">40 minuti</label>
                        </div>
                        <div class="duration-option">
                            <input type="radio" id="1hour" name="duration" value="60" class="duration-radio">
                            <label for="1hour" class="duration-label">1 ora</label>
                        </div>
                        <div class="duration-option">
                            <input type="radio" id="2hour" name="duration" value="120" class="duration-radio">
                            <label for="2hour" class="duration-label">2 ore</label>
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="submit-btn">Pubblica</button>
            </form>
        </div>
    </main>

    <!-- Modal per le lezioni -->
    <div class="modal-overlay" id="lessonsModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Lezioni del giorno</h3>
                <button type="button" class="modal-close" id="closeModal">&times;</button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Contenuto delle card verrà inserito qui dinamicamente -->
            </div>
        </div>
    </div>

    <!-- Template nascosto per le card delle lezioni -->
    <div class="lessons-template">
        <% for (const date of lessons) { %>
            <% for (const instructorLessons of date.instructors) { %>
                <div class="lesson-card" data-date="<%= date.day %>">
                    <div class="instructor-info">
                        <h4 class="instructor-name"><%= instructorLessons.instructor.nome %> <%= instructorLessons.instructor.cognome %></h4>
                        <p class="lesson-date"><%= date.day %></p>
                    </div>
                    <div class="lessons-list">
                        <% for (const hour of instructorLessons.lezioni) { %>
                            <div class="lesson-time">
                                <span class="time-slot"><%= hour.startTime %> - <%= hour.endTime %></span>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>

    <script>
        $(function() {
            // Inizializzazione del date picker
            $("#day").multiDatesPicker({
                dateFormat: "dd/mm/yy",
                minDate: 0,
                beforeShowDay: function(date) {
                    var day = date.getDate();
                    var month = date.getMonth() + 1;
                    var year = date.getFullYear();
                    var dateString = (day < 10 ? '0' : '') + day + '/' + (month < 10 ? '0' : '') + month + '/' + year;
                    var sectionExists = $('.lesson-card[data-date="' + dateString + '"]').length > 0;
                    if (sectionExists) {
                        return [true, "has-lessons", "Ci sono già lezioni"];
                    } else {
                        return [true, "no-lessons", "Non ci sono ancora lezioni"];
                    }
                },
                onSelect: function(dateText, inst) {
                    var formattedDate = moment(dateText, "DD/MM/YYYY").format("DD/MM/YYYY");
                    var matchingCards = $('.lesson-card[data-date="' + formattedDate + '"]');
                    
                    if (matchingCards.length > 0) {
                        // Svuota il contenuto del modal e aggiunge le card
                        $('#modalBody').empty();
                        matchingCards.clone().appendTo('#modalBody');
                        
                        // Mostra il modal
                        $('#lessonsModal').addClass('active');
                    }
                }
            });

            // Gestione chiusura modal
            $('#closeModal, .modal-overlay').on('click', function(e) {
                if (e.target === this) {
                    $('#lessonsModal').removeClass('active');
                }
            });

            // Gestione select multiplo personalizzato
            $("#reserved").on("mousedown", function(event) {
                event.preventDefault();
                var option = event.target;
                
                if (option.selected) {
                    option.selected = false;
                } else {
                    option.selected = true;
                }
                
                var mouseMoveListener = function(event) {
                    var targetOption = document.elementFromPoint(event.clientX, event.clientY);
                    if (targetOption && targetOption.tagName === "OPTION") {
                        targetOption.selected = !targetOption.selected;
                    }
                };
                
                var mouseUpListener = function() {
                    document.removeEventListener("mousemove", mouseMoveListener);
                    document.removeEventListener("mouseup", mouseUpListener);
                };
                
                document.addEventListener("mousemove", mouseMoveListener);
                document.addEventListener("mouseup", mouseUpListener);
            });
        });
    </script>
</body>
</html>