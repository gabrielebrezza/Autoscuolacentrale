<script>
    $(document).ready(function() {
        $('#searchName, #searchPhone, #searchEmail, #searchExams').on('input', function() {
            var nameFilter = $('#searchName').val().toLowerCase();
            var phoneFilter = $('#searchPhone').val().toLowerCase();
            var emailFilter = $('#searchEmail').val().toLowerCase();
            var examsFilter = parseInt($('#searchExams').val());

            $('tbody tr').each(function() {
                var name = $(this).find('td:nth-child(1)').text().toLowerCase();
                var phone = $(this).find('td:nth-child(3)').text().toLowerCase();
                var email = $(this).find('td:nth-child(2)').text().toLowerCase();
                var exams = parseInt($(this).find('td:nth-child(4)').text());

                var nameMatch = name.includes(nameFilter);
                var phoneMatch = phone.includes(phoneFilter);
                var emailMatch = email.includes(emailFilter);
                var examsMatch = isNaN(examsFilter) || exams === examsFilter;

                if (nameMatch && phoneMatch && emailMatch && examsMatch) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>

<script>
document.getElementById('copiaEmail').addEventListener('click', function() {
    // Seleziona tutte le righe <tr> che contengono gli indirizzi email visibili
    var visibleEmailRows = document.querySelectorAll('tr:not([style*="display:none"])');

    // Crea un array vuoto per memorizzare gli indirizzi email visibili
    var visibleEmails = [];

    // Itera su tutte le righe visibili
    visibleEmailRows.forEach(function(row) {
        // Seleziona il <td> all'interno della riga corrente
        var td = row.querySelector('td[data-label="Email"]');
        // Se l'elemento <td> Ã¨ presente e visibile
        if (td && (td.offsetWidth > 0 || td.offsetHeight > 0)) {
            // Aggiungi l'indirizzo email all'array
            visibleEmails.push(td.dataset.email);
        }
    });

    // Unisci gli indirizzi email visibili in una stringa separata da virgole
    var emailsString = visibleEmails.join(', ');

    // Copia la stringa degli indirizzi email negli appunti
    navigator.clipboard.writeText(emailsString).then(function() {
        alert('Indirizzi email visibili copiati negli appunti: ' + emailsString);
    }).catch(function(err) {
        console.error('Errore durante la copia negli appunti:', err);
    });
});

</script>


